<h2 align="center"><%= @article.title %>(#<%= @article.id %>) </h2>
<div class= "well col-xs-8 col-xs-offset-2">
  <ul class = "listing">
    <div class = "row center">
      <div class = "col-md-4 col-md-offset-4">
        <li>Created By:</li>
        <li>
          <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        </li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li>
          <small><%= pluralize(@article.user.articles.count, "article") %></small> 
        </li>
      </div>
    </div>
  </ul>  
  <div class="acticle-desc">
    <p>
      <%= simple_format(@article.description)  %>
    </p>
  </div>
  <div >
    <small>
      Created By : <%= @article.user.username if @article.user %>, 
      <%= time_ago_in_words(@article.created_at) %> ago. 
      Last updated: <%= time_ago_in_words(@article.updated_at) %> ago.
    </small>
  </div>
  <div class="article-actions">
    <% if logged_in? && current_user == @article.user %>
      <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-xs btn-primary" %>
      <%= link_to 'Delete this article', 
                article_path(@article), 
                method: :delete, 
                data: {confirm: "are you sure you want to delete this article?"}, 
                class:"btn btn-xs btn-danger" %>    
    <% end %>
    <%= link_to 'View all articels', articles_path, class:"btn btn-xs btn-success" %>
  </div>
  
</div>
<% if logged_in? %>
  <div class="row col-xs-8 col-xs-offset-2">
    <h4 class="description">
      <strong>
        Comments :
      </strong>

    <!--
      Render comment form
     -->

    </h4>
  </div>  
<% else %>
  <div class= "well col-xs-8 col-xs-offset-2 comment-disabled">
    <h4 class="center">
      <strong>
        You must log in to comment on this article.
      </strong>
    </h4>
  </div>
<% end %>

