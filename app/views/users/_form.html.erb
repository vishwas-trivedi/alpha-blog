<%= render 'shared/errors', obj: @user %>

<!-- Form start --> 
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username %>
        </div>
        <div class = "col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder:"Enter username", autofocus: true  %>       
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email,  class:"form-control", placeholder:"Enter email address" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password,  class:"form-control", placeholder:"Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Details", class: "btn btn-primary btn-large btn-xlarge") %>
          
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to 'Cancel and return to article listing', articles_path %> ]
    </div>
  </div>
</div>
<!-- Form end --> 
