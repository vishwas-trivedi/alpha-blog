<h1 align="center">
  Welcome to <%= @user.username %>'s page
</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for(@user, size: 120)  %>
  </div>
</div>
<h4 align="center"> <%= @user.username %>'s articles </h4>
<hr/>
<% if @user_articles.count == 0 %>
  <h4 align="center"><b>User is yet to create an article.</b></h4>
<% end %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div align="center">
  <%= will_paginate @user_articles %>
</div>

